{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Gaming Gaiden",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoLogo",
                "-ExecutionPolicy",
                "bypass",
                "-File",
                "./Build.ps1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true,
                "echo": true
            }
        },
        {
            "label": "Run Gaming Gaiden",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-NoLogo",
                "-ExecutionPolicy",
                "bypass",
                "-File",
                "./GamingGaiden.ps1"
            ],
            "options": {
                "env": {
                    "GAIDEN_DEV_MODE": "true"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true,
                "echo": true
            }
        }
    ]
}